<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="action_gestion_autorisation" model="ir.actions.act_window">
        <field name="name">Demandes d'autorisation</field>
        <field name="res_model">gestion.autorisation</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_autorisation_root" name="Autorisations" sequence="10"/>

    <menuitem id="menu_autorisation_demandes"
              name="Mes Demandes"
              parent="menu_autorisation_root"
              action="action_gestion_autorisation"
              sequence="10"/>

    <record id="view_autorisation_tree" model="ir.ui.view">
        <field name="name">gestion.autorisation.tree</field>
        <field name="model">gestion.autorisation</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="date_demande"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="view_autorisation_form" model="ir.ui.view">
        <field name="name">gestion.autorisation.form</field>
        <field name="model">gestion.autorisation</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="date_demande"/>
                        <field name="state"/>
                    </group>
                    <group string="DÃ©tails">
                        <field name="description" placeholder="Description simple de la demande..."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>